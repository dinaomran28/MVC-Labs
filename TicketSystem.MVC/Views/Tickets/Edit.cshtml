@model TicketEditVM

<form asp-action="Edit" method="post">

    <div class="form-group m-2">
        <input type="hidden" class="form-control" asp-for="Id" />
    </div>
    <div class="form-group m-2">
        <label asp-for="Severity"></label>
        <select asp-for="Severity" asp-items="Html.GetEnumSelectList<Severity>()"></select>
    </div>
    <div class="form-group m-2">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="form-group m-2">
        <label asp-for="DepartmentId">Department</label>
        <select asp-for="DepartmentId" asp-items="ViewBag.DepartmentId"></select>
    </div>
    <div class="form-group m-2">
        <label asp-for="DevelopersIds">Developers</label>
        <select asp-for="DevelopersIds" asp-items="ViewBag.Developers"></select>
    </div>

    <button class="btn btn-secondary m-2"> Submit </button>

</form>